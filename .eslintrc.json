{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_", // تجاهل المتغيرات التي تبدأ بـ _
        "argsIgnorePattern": "^_" // تجاهل المتغيرات الغير مستخدمة التي تبدأ بـ _
      }
    ]
  }
}
